<Page
    x:Class="unknown.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:unknown"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Text="Name" FontSize="36"/>
        <TextBox  Grid.Row="1" Grid.Column="1"
                  FontSize="36" PlaceholderText="Enter Name"/>
        <TextBlock Grid.Row="2" Text="Password" FontSize="36"/>
        <TextBox  Grid.Row="2" Grid.Column="1"
                  FontSize="36" PlaceholderText="Enter password"/>
        <Button Grid.Row="3" Content="Login" FontSize="36" Click="Button_Click"/>
        <Button  Grid.Row="3" Grid.Column="1"
                  FontSize="36" Content="Cancel" Click="Button_Click_1"/>
    </Grid>
</Page>
